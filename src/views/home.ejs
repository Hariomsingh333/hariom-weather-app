  <body class="d-flex flex-column" style="width: 100%; min-height: 100vh">
    <!-- <link href="../public/style.css" rel="stylesheet" type="text/css" /> -->
    <title>Weather app by Hari om</title>
    <!-- Navbar  -->
    <%- include("nav.ejs") %>
    <div class="display-2 text-center">
      Weather App <span><i class="fas fa-cloud-moon-rain"></i></span>
    </div>
    <div
      class="
        container
        d-flex
        flex-column
        justify-content-center
        align-items-center
        my-auto
        fs-3
      "
    >
      <form action="/weather" method="POST" id="form" class="text-center">
        <label for="city"
          >City Name:
          <input
            type="text"
            name="name"
            id="city"
            placeholder="Enter Your City Name"
            autocomplete="off"
            class="m-3 rounded-3"
          />
        </label>
        <br />
        <button type="submit" class="btn btn-outline-primary rounded-pill">
          Show Weather
        </button>
      </form>
    </div>
